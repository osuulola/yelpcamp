<%- include ("partials/header") %>
<div class='container'>
   <header class='jumbotron'>
      <h1>Welcome to YelpCamp!</h1>
      <p>We bring you the best grounds in Nigeria</p>
      <p><a class='btn btn-primary' href="/campgrounds/new">Create a New Campground</a></p>
   </header>
   
   <div class="row">
      <% campgrounds.forEach((campground)=>{ %> 
         <div class='col-sm-12 col-md-6'>
         <div class='caption'>
            <h4><%= campground.name%></h4>
         </div>
          <div class='thumbnail'>
          <img src= '<%- campground.image %>' alt="image">
         </div>
         </div>
          <% }) %>
      
   </div>  
   
       <%- include ('partials/footer') -%>

</div>
